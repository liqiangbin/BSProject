    introduce
  </sql>
   <sql id="bookParams" >
    <if test="id != null">
      AND Id = #{id} 
    </if>
    <if test="name != null and name !=''">
      AND name like '%${name}%'
    </if>
    <if test="author != null and author !=''">
      AND author like '%${author}%'
    </if>
    <if test="publish != null and publish !=''">
      AND publish like '%${publish}%'
    </if>

    <if test="type != null">
      AND type = #{type}
    </if>
    <if test="subtype != null">
      AND subType = #{subtype}
    </if>
  </sql>
  
  <sql id="nameParams" >
    <if test="param1 != null and param1 !=''">
      AND name like '%${param1}%'
    </if>
    <if test="param2 != null and param2 !=''">
      OR name like '%${param2}%'
    </if>
    <if test="param3 != null and param3 !=''">
      OR name like '%${param3}%'
    </if>
    <if test="param4 != null and param4 !=''">
      OR name like '%${param4}%'
    </if>
     <if test="typeparam1 != null and typeparam1 !=0">
      AND subType =#{typeparam1}
    </if>
    <if test="typeparam2 != null and typeparam2 !=0">
      OR subType =#{typeparam2}
    </if>
    <if test="typeparam3 != null and typeparam3 !=0">
      OR subType =#{typeparam3}
    </if>
    
  </sql>
  <sql id="subtypeParams" >
    <if test="param1 != null and param1 !=''">
      AND name like '%${param1}%'
    </if>
    <if test="param2 != null and param2 !=''">
      OR name like '%${param2}%'
    </if>
    <if test="param3 != null and param3 !=''">
      OR name like '%${param3}%'
    </if>
    <if test="param4 != null and param4 !=''">
      OR name like '%${param4}%'
    </if>
     <if test="typeparam1 != null and typeparam1 !=0">
      AND subType =#{typeparam1}
    </if>
    <if test="typeparam2 != null and typeparam2 !=0">
      OR subType =#{typeparam2}
    </if>
    <if test="typeparam3 != null and typeparam3 !=0">
      OR subType =#{typeparam3}
    </if>
    
  </sql>
  
  <select id="selectByPrimaryKey" resultMap="ResultMapWithBLOBs" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from book
    where Id = #{id,jdbcType=INTEGER}
  </select>
  
  <select id="getBookBySql" resultMap="ResultMapWithBLOBs" parameterType="java.util.Map">
    select 
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from book
    where 1=1 
