import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;


public class test1 {

	public static void main(String[] args) {
		int result=0;
		 List list = new ArrayList();
		 test1 t=new test1();
		  list=t.scannerNumber();
		  for (Object object : list) {
			result=result+Integer.parseInt(object.toString());
		}
		  for (Object object : list) {
			  double percent=Integer.parseInt(object.toString())/result;
			  System.out.println(percent);
				System.out.println(object + "     " + percent + "%");
			}
		  System.out.println(result + "     " + 100 + "%");

	}
	public  List scannerNumber(){
		 List list = new ArrayList();
		   System.out.println("请输入若干数字，输入 = 结束");
		   boolean flag=true;
		   int m;
		 while(flag){
			   Scanner reader=new Scanner(System.in);
			   try {
				   m = reader.nextInt();
				   if(m>0){
					  list.add(m);
				   }else{
					   System.out.println("请输入大于0的数！");
				   }
	            } catch (Exception e) {
	            	if(reader.next().equals("=")){
	            		 flag=false; 
	 			   }else{
	 				  System.out.println("请输入整数！");
	 			   }
	            }
		   }
		return list;
	}

}
