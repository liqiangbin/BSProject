	<script type="application/x-javascript"> 
	
	addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
		function hideURLbar(){ window.scrollTo(0,1); }
//判断session 是否为空
		if(${sessionScope.loginCustomer.id}!=null){
	        $("#showExit").show();
	        $("#showshowName").show();
	        $("#showLogin").hide();
	        $("#showRegeist").hide();
            }else{
                	$("#showExit").hide();
        			$("#showName").hide();
        			$("#showLogin").show();
        			$("#showRegeist").show();
                }
		
		</script>